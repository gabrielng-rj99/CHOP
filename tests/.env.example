# =============================================================================
# Client Hub Open Project - Test Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed for your test environment
# =============================================================================

# =============================================================================
# Test Environment URLs
# =============================================================================
# Backend API URL for tests (default uses docker-compose test ports)
TEST_API_URL=http://localhost:63000/api

# Frontend URL for tests (optional, used for E2E tests)
TEST_FRONTEND_URL=http://localhost:65080

# =============================================================================
# Database Configuration (Test Database)
# =============================================================================
DB_HOST=localhost
DB_PORT=65432
DB_USER=test_user
DB_PASSWORD=test_password
DB_NAME=contracts_test
DB_SSL_MODE=disable

# =============================================================================
# JWT Configuration (for testing)
# =============================================================================
# WARNING: Use a different secret than production!
JWT_SECRET=test_jwt_secret_key_for_testing_only_do_not_use_in_production
JWT_EXPIRATION_TIME=60
JWT_REFRESH_EXPIRATION_TIME=10080

# =============================================================================
# Password Policy Configuration
# =============================================================================
PASSWORD_MIN_LENGTH=16
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# =============================================================================
# Security Configuration
# =============================================================================
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=15m
LOCK_LEVELS=3
LOCK_LEVEL_1_ATTEMPTS=3
LOCK_LEVEL_1_DURATION=5m
LOCK_LEVEL_2_ATTEMPTS=5
LOCK_LEVEL_2_DURATION=15m
LOCK_LEVEL_3_ATTEMPTS=10
LOCK_LEVEL_3_DURATION=60m

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=63000
GIN_MODE=release
LOG_LEVEL=info

# =============================================================================
# Test User Credentials (for automated tests)
# =============================================================================
# These are used by conftest.py to create/authenticate test users
TEST_ROOT_USERNAME=root
TEST_ROOT_PASSWORD=RootPass123!@#456789%%0321654987+-7dfgacvds

# =============================================================================
# Test Execution Options
# =============================================================================
# Enable/disable certain test categories
RUN_SECURITY_TESTS=true
RUN_PERFORMANCE_TESTS=false
RUN_E2E_TESTS=false

# Test timeout (seconds)
TEST_TIMEOUT=300

# Parallel test execution
PYTEST_WORKERS=auto

# =============================================================================
# Docker Test Environment
# =============================================================================
# Ports for test containers
TEST_DB_PORT=65432
TEST_BACKEND_PORT=63000
TEST_FRONTEND_PORT=65080

# Container names
TEST_DB_CONTAINER=chop_test_db
TEST_BACKEND_CONTAINER=chop_test_backend
TEST_FRONTEND_CONTAINER=chop_test_frontend
