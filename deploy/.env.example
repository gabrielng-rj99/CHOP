# ============================================================================
# Database
# ============================================================================
DB_USER=ehopuser
DB_PASSWORD=for_safety_use_a_64_character_random_password
DB_NAME=ehopdb
DB_PORT=5432

# ============================================================================
# Backend
# ============================================================================
API_PORT=3000
SERVER_HOST=0.0.0.0

JWT_SECRET=for_safety_use_a_64_character_random_password
JWT_EXPIRATION_TIME=3600
JWT_REFRESH_EXPIRATION_TIME=604800

# ============================================================================
# Frontend
# ============================================================================
FRONTEND_PORT=8080
FRONTEND_HTTPS_PORT=8443
VITE_API_URL=""

# ============================================================================
# SSL/TLS + CORS
# ============================================================================
SSL_DOMAIN=ehop.home.arpa
DB_SSLMODE=disable

CORS_ALLOWED_ORIGINS=https://${SSL_DOMAIN},http://localhost:${FRONTEND_HTTPS_PORT}

CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=Content-Length
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================================================
# Application
# ============================================================================
APP_ENV=development
APP_NAME=Entity-Hub
APP_VERSION=1.0.0

# ============================================================================
# Logging
# ============================================================================
LOG_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json

# Volumes (host paths)
POSTGRES_VOLUME_PATH=./data/db
BACKEND_LOGS_PATH=./logs/backend
SSL_CERTS_PATH=./certs/ssl
