# ============================================================================
# Application
# ============================================================================
APP_ENV=development
APP_NAME=Client-Hub
APP_VERSION=1.0.0

# ============================================================================
# SSL/TLS
# ============================================================================
SSL_DOMAIN=ehop.home.arpa
DB_SSLMODE=disable

# ============================================================================
# Internal Ports (used in all modes: Docker default, with-ports-on-host, monolith)
# ============================================================================
DB_PORT=5432
API_PORT=3000

# ============================================================================
# Host Ports (for with-ports-on-host.yml - change these to expose on different ports)
# ============================================================================
DB_HOST_PORT=5432
API_HOST_PORT=3000
FRONTEND_HTTPS_HOST_PORT=8443

# ============================================================================
# Database
# ============================================================================
DB_HOST=postgres
DB_USER=ehopuser
DB_PASSWORD=for_safety_use_a_64_character_random_password
DB_NAME=ehopdb

# ============================================================================
# Backend
# ============================================================================
JWT_SECRET=for_safety_use_a_64_character_random_password
JWT_EXPIRATION_TIME=3600
JWT_REFRESH_EXPIRATION_TIME=604800


# ============================================================================
# CORS + Comms
# ============================================================================
SERVER_HOST=0.0.0.0
VITE_API_URL="https://${SSL_DOMAIN}/api"
CORS_ALLOWED_ORIGINS=https://${SSL_DOMAIN},http://localhost:${FRONTEND_HTTPS_HOST_PORT}

# ============================================================================
# Logging
# ============================================================================
LOG_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# Volumes (host paths)
# ============================================================================
POSTGRES_VOLUME_PATH=./data/db
BACKEND_LOGS_PATH=./logs/backend
SSL_CERTS_PATH=./certs/ssl
